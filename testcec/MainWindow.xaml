<Window x:Class="testcec.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testcec"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Name="mainw" Background="White">

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Testovaya forma cecoev"
                       FontSize="30"
                       HorizontalAlignment="Center"/>
                <Button Name="test1"
                    Height="30"
                    Width="100"
                    Margin="0,30,0,0"
                    Content="test1"
                    Click="test1_Click"/>
                <Button Name="test2"
                    Height="30"
                    Width="100"
                    Margin="0,30,0,0"
                    Content="test2"
                    Click="test2_Click"/>
                <Button Name="test3"
                    Height="30"
                    Width="100"
                    Margin="0,30,0,0"
                    Content="test3"
                    Click="test3_Click"/>
            </StackPanel>

        </Grid>
    </Grid>
</Window>
